---
import FooterNavigation from '~/components/ui/FooterNavigation.astro';
---

<Fragment>
  <footer class="mx-auto w-full max-w-md">
    <div class="flex w-full flex-col items-center justify-center gap-6 px-4 pb-4 pt-8">
      <span class="text-2xl font-bold">TimBuilding</span>
      <p class="w-full text-center text-sm text-[#0009]">
        We work with international startups, help entrepreneurs launch for the long term.
      </p>
    </div>
    <FooterNavigation
      navigations={[
        {
          href: '/',
          title: 'Home',
        },
        {
          href: '/',
          title: 'Home',
        },
        {
          href: '/',
          title: 'Home',
        },
      ]}
    />

    <div class="mb-4 mt-8 flex flex-col items-center justify-center">
      <span class="w-full text-center text-sm text-[#0009]">&copy; {new Date().getFullYear()} TimBuilding</span>
    </div>
  </footer>
  <div class="relative h-16 w-full overflow-hidden">
    {
      Array.from({ length: 50 }).map((_, index) => {
        const colors = ['bg-yellow-400', 'bg-blue-400', 'bg-yellow-200', 'bg-blue-200'];
        const shapes = ['', 'triangle', 'parallelogram', ''];
        const leftPosition = index * (100 / 15) + '%';
        const color = colors[Math.floor(Math.random() * colors.length)];
        const shape = shapes[Math.floor(Math.random() * shapes.length)];
        const size = Math.floor(Math.random() * 32) + 16; // Random size between 16 and 48
        return (
          <div
            class={`absolute ${color} ${shape}`}
            style={{
              left: `calc(${leftPosition} - 100px)`,
              width: `${size}px`,
              height: `${size}px`,
              bottom: '0',
              transform: 'scale(1)',
            }}
            class:list={{
              'md:scale-0.5 md:transform': true, // Scale down on medium and larger screens
            }}
          />
        );
      })
    }
  </div>
</Fragment>
