---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import WidgetHeadline from '~/components/ui/WidgetHeadline.astro';
import TestimonialGrid from '~/components/ui/TestimonialGrid.astro';

const {
  testimonials = []
} = Astro.props;
---

<WidgetWrapper containerClass='px-0 md:px-0 max-w-full'>
  <WidgetHeadline
    title="Client Testimonials"
    subtitle="We are proud to have worked with some of the best companies in the world."
  />
  <TestimonialGrid testimonials={testimonials} />
</WidgetWrapper>
